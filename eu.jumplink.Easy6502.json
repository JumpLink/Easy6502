{
  "id": "eu.jumplink.Easy6502",
  "runtime": "org.gnome.Platform",
  "runtime-version": "47",
  "sdk": "org.gnome.Sdk",
  "sdk-extensions": [
    "org.freedesktop.Sdk.Extension.node22",
    "org.freedesktop.Sdk.Extension.typescript"
  ],
  "tags": [
    "nightly"
  ],
  "build-options": {
    "append-path": "/usr/lib/sdk/node22/bin:/usr/lib/sdk/typescript/bin"
  },
  "command": "eu.jumplink.Easy6502",
  "finish-args": [
    "--device=dri",
    "--share=ipc",
    "--socket=fallback-x11",
    "--socket=wayland",
    "--socket=pulseaudio",
    "--env=GJS_DISABLE_JIT=1"
  ],
  "cleanup": [
    "/include",
    "/lib/pkgconfig",
    "/man",
    "/share/doc",
    "/share/gtk-doc",
    "/share/man",
    "/share/pkgconfig",
    "*.la",
    "*.a"
  ],
  "modules": [
    {
      "name": "blueprint-compiler",
      "buildsystem": "meson",
      "sources": [
        {
          "type": "git",
          "url": "https://gitlab.gnome.org/jwestman/blueprint-compiler",
          "tag": "v0.14.0"
        }
      ]
    },
    {
      "name": "Easy6502",
      "buildsystem": "meson",
      "sources": [
        {
          "type": "dir",
          "path": "."
        }
      ]
    }
  ]
}