<?xml version="1.0" encoding="UTF-8"?>
<language id="assembler" name="6502 Assembler" version="2.0" _section="Source">
  <metadata>
    <property name="mimetypes">text/x-asm;text/x-assembler</property>
    <property name="globs">*.asm;*.s</property>
    <property name="line-comment-start">;</property>
  </metadata>

  <styles>
    <style id="comment" name="Comment" map-to="def:comment"/>
    <style id="string" name="String" map-to="def:string"/>
    <style id="preprocessor" name="Preprocessor" map-to="def:preprocessor"/>
    <style id="instruction" name="Instruction" map-to="def:keyword"/>
    <style id="number" name="Number" map-to="def:number"/>
    <style id="constant" name="Constant" map-to="def:constant"/>
    <style id="operator" name="Operator" map-to="def:operator"/>
    <style id="label" name="Label" map-to="def:type"/>
    <style id="variable" name="Variable" map-to="def:identifier"/>
  </styles>
  
  <definitions>
    <context id="assembler">
      <include>
        <!-- Comments -->
        <context id="comment" style-ref="comment">
          <start>;</start>
          <end>$</end>
        </context>
  
        <!-- Strings -->
        <context id="string" style-ref="string" end-at-line-end="true">
          <start>"</start>
          <end>"</end>
          <include>
            <context id="escape" style-ref="def:special-char">
              <match>\\.</match>
            </context>
          </include>
        </context>
        
        <!-- Numbers -->
        <context id="number" style-ref="number">
          <match extended="true">
            (\$[0-9a-fA-F]+\b)|
            (\@[0-1]+\b)|
            (\b[0-9]+\b)
          </match>
        </context>
  
        <!-- Instructions -->
        <context id="instructions" style-ref="instruction">
          <keyword>LDA</keyword>
          <keyword>lda</keyword>
          <keyword>LDX</keyword>
          <keyword>ldx</keyword>
          <keyword>LDY</keyword>
