        <!-- Preprocessor directives -->
        <context id="preprocessor" style-ref="preprocessor">
          <prefix>^\s*\.</prefix>
          <keyword>BASE</keyword>
          <keyword>ORG</keyword>
          <keyword>DEF</keyword>
          <keyword>IF</keyword>
          <keyword>INCLUDE</keyword>
          <keyword>INCBIN</keyword>
          <keyword>ELSEIF</keyword>
          <keyword>ELSE</keyword>
          <keyword>ENDIF</keyword>
          <keyword>IFDEF</keyword>
          <keyword>IFNDEF</keyword>
          <keyword>DB</keyword>
          <keyword>DW</keyword>
          <keyword>DBG</keyword>
          <keyword>DWG</keyword>
          <keyword>ENDD</keyword>
          <keyword>REPEAT</keyword>
          <keyword>ENDR</keyword>
          <keyword>MACRO</keyword>
          <keyword>ENDM</keyword>
          <keyword>MSG</keyword>
          <keyword>HEX</keyword>
        </context>

        <!-- Define constants -->
        <context id="define-constant" style-ref="constant">
          <match>^\s*(define)\s+([a-zA-Z_][a-zA-Z0-9_]*)\s+(.+)$</match>
          <include>
            <context sub-pattern="1" style-ref="preprocessor"/>
            <context sub-pattern="2" style-ref="variable"/>
          </include>
        </context>

        <!-- Operators -->
        <context id="operator" style-ref="operator">
          <match>[\+\-\*\/\&gt;\&lt;\(\)\,\#\=\!\[\]]</match>
        </context>

        <!-- Labels -->
        <context id="label" style-ref="label">
          <match>^[a-zA-Z_][a-zA-Z0-9_]*:</match>
        </context>

        <!-- Variables -->
        <context id="variable" style-ref="variable">
          <match>[a-zA-Z_][a-zA-Z0-9_]*</match>
        </context>
      </include>
    </context>
  </definitions>
</language>