{
    "name": "@easy6502/app-gnome",
    "version": "0.1.0",
    "description": "Learn 6502 assembly by developing games on a virtual console",
    "main": "dist/main.js",
    "type": "module",
    "private": true,
    "scripts": {
        "test": "echo \"Error: no test specified\" && exit 1",
        "clear": "rm -rf dist",
        "build:vite": "vite build",
        "build:resources": "glib-compile-resources --sourcedir data data/eu.jumplink.Easy6502.data.gresource.xml",
        "build:with-deps": "yarn workspaces foreach -pRv --from @easy6502/app-gnome run build",
        "build": "yarn build:resources && yarn build:vite",
        "check": "tsc",
        "start:app": "gjs -m eu.jumplink.Easy6502",
        "debug:app": "GTK_DEBUG=interactive gjs -m eu.jumplink.Easy6502",
        "start": "yarn start:app"
    },
    "author": "Pascal Garber <pascal@artandcode.studio>",
    "license": "GPL-3.0",
    "devDependencies": {
        "@easy6502/vite-plugin-blueprint": "workspace:^",
        "@easy6502/vite-plugin-gettext": "workspace:^",
        "typescript": "^5.6.3",
        "vite": "^5.4.10"
    },
    "dependencies": {
        "@easy6502/6502": "workspace:^",
        "@easy6502/learn": "workspace:^",
        "@girs/adw-1": "^1.7.0-4.0.0-beta.19",
        "@girs/gdk-4.0": "^4.0.0-4.0.0-beta.19",
        "@girs/gdkpixbuf-2.0": "^2.0.0-4.0.0-beta.19",
        "@girs/gio-2.0": "^2.82.2-4.0.0-beta.19",
        "@girs/gjs": "^4.0.0-beta.19",
        "@girs/glib-2.0": "^2.82.2-4.0.0-beta.19",
        "@girs/gobject-2.0": "^2.82.2-4.0.0-beta.19",
        "@girs/gtk-4.0": "^4.16.3-4.0.0-beta.19",
        "@girs/gtksource-5": "^5.14.1-4.0.0-beta.19",
        "@girs/javascriptcore-6.0": "^2.46.0-4.0.0-beta.19",
        "@girs/pango-1.0": "^1.54.0-4.0.0-beta.19",
        "@girs/webkit-6.0": "^2.46.0-4.0.0-beta.19"
    }
}
