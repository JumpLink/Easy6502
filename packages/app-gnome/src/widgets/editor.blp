using Gtk 4.0;
using Adw 1;
using GtkSource 5;

template $Editor: Adw.Bin {
  ScrolledWindow scrolledWindow {
    hexpand: true;
    vexpand: true;
    has-frame: false;
    GtkSource.View sourceView {
      auto-indent: true;
      indent-width: 4;
      show-line-numbers: true;
      monospace: true;
    }
  }
}
