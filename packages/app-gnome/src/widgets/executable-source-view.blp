using Gtk 4.0;
using Adw 1;

template $ExecutableSourceView: Adw.Bin {
  Box {
    orientation: vertical;

    Overlay overlay {

      $SourceView sourceView {}

      [overlay]
      Gtk.Button buildButton {
        halign: end;
        valign: start;
        margin-end: 12;
        margin-top: 12;
        icon-name: "move-to-window-symbolic";
        styles [
          "suggested-action",
        ]
        action-name: 'executable-source-view.copy';
      }
    }
  }
}
