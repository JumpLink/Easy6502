using Gtk 4.0;
using Adw 1;

template $Hexdump: Adw.Bin {
  ScrolledWindow scrolledWindow {
    height-request: 100;
    vexpand: true;
    has-frame: false;
    $SourceView sourceView {
      editable: false;
      copyable: true;
      language: 'hex';
      height-request: 100;
      vexpand: true;
      line-numbers: true;
      line-number-start: 0x0600;
    }
  }
}
