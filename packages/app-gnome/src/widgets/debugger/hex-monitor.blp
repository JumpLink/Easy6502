using Gtk 4.0;
using Adw 1;

template $HexMonitor: Adw.Bin {
  Box {
    orientation: vertical;
    spacing: 8;

    Box {
      spacing: 8;
      margin-start: 8;
      margin-end: 8;
      margin-top: 8;

      Label {
        label: "Start:";
      }

      Entry startAddressEntry {
        max-width-chars: 6;
        placeholder-text: "0000";
      }

      Label {
        label: "Length:";
      }

      Entry lengthEntry {
        max-width-chars: 6;
        placeholder-text: "FFFF";
      }
    }

    $SourceView sourceView {
      editable: false;
      copyable: true;
      copy-button-icon: 'clipboard-symbolic';
      language: 'hex';
      vexpand: true;
      hexpand: false;
      line-numbers: true;
      // TODO: Fix scrollable height
      height-request: 200;
      fit-content-height: true;
    }
  }
}
