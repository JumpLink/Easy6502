<Page xmlns="http://schemas.nativescript.org/tns.xsd"
      xmlns:widgets="~/widgets/index">
    <ActionBar title="MyApp">
        <!-- explicitly hide the back button -->
        <NavigationButton visibility="collapsed" />

        <!-- show a Font Awesome icon on the left -->
        <ActionItem
            position="left"
            icon="res://reset_symbolic"
            class="fas"
            tap="run"
        />

        <ActionItem position="right" icon="res://baseline_more_vert_24" tab="openMenu" />
    </ActionBar>

    <!-- Use GridLayout to position content and bottom navigation -->
    <GridLayout rows="*, auto" columns="*">
        <!-- Frame for content switching -->
        <Frame id="mainFrame" row="0" defaultPage="learn-page" />
do
        <!-- Bottom navigation bar positioned at the bottom -->
        <widgets:MaterialBottomNavigation row="1" height="80">
            <widgets:BottomTab title="Learn" icon="res://school_symbolic" id="learn" />
            <widgets:BottomTab title="Editor" icon="res://code_symbolic" id="editor" />
            <widgets:BottomTab title="Debugger" icon="res://bug_symbolic" id="debugger" />
            <widgets:BottomTab title="Game Console" icon="res://nintendo_controller_symbolic" id="game-console" />
        </widgets:MaterialBottomNavigation>

    </GridLayout>
</Page>