{
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "moduleResolution": "Bundler",
        "allowImportingTsExtensions": true,
        "noEmit": true,
        "jsx": "react-jsx",
        "jsxImportSource": "nano-jsx/esm",
        "types": ["mdx"]
    },
    "include": ["src/**/*.ts", "src/**/*.tsx", "src/**/*.mdx"]
}